<!DOCTYPE html>
<html>
  <head>
    <title>シェアバイ</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  </head>

  <body>
  <div class="header-logo">
  <% if @current_user %>
  <%= link_to("シェアバイ", "/posts/index") %>
  <% else %>
  <%= link_to("シェアバイ","/") %>
  <% end %>
  </div>
  <ul class="header-menus">
  <% if @current_user %>
  <li>
  <%= link_to(@current_user.name,"/users/#{@current_user.id}") %>
  </li>
   <li>
   <%= link_to("新規投稿", "/posts/new") %>
   </li>
   <li>
   <%= link_to("店舗を探す","/posts/top") %>
   </li>
   <% else %>
   <li>
   <%= link_to("新規登録","/signup") %>
   </li>
   <li>
   <%= link_to("ログイン","/login") %>
   </li>
   <% end %>
  </ul>

  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <%= yield %>
  </body>
</html>
