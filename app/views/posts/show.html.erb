<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
    <div class="post-user-name">
    <%= link_to(@user.name, "/users/#{@user.id}") %>
    </div>
      <p>
      <%= @post.content %> 
      </p>
      <div class="post-time">
      <%= @post.created_at %>
      </div>
      <div class="post-menus">
      <%= link_to "編集",edit_shop_post_path(post_id:post.id, shop_id:shop.id) %>
      <%= link_to "削除",destroy_shop_post_path, {method: "post"} %>
      </div>
    </div>
  </div>
</div>
